{
	"name": "backend",
	"version": "1.0.0",
	"description": "Personal site backend",
	"main": "dist/index.js",
	"scripts": {
		"prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
		"build": "tsc",
		"prestart": "npm run build",
		"dev": "nodemon .",
		"start": "cd dist && node index.js",
		"client": "cd client && npm run dev",
		"client-start": "cd client && npm run start",
		"start-dev": "concurrently \"npm run dev\" \"npm run client\"",
		"prod": "concurrently \"npm run start\" \"npm run client-start\"",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "NorbertCseh",
	"license": "ISC",
	"dependencies": {
		"argon2": "^0.27.1",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"moment": "^2.29.1",
		"mongoose": "^5.11.19",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0"
	},
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.11",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/mongoose": "^5.10.3",
		"@types/node": "^14.14.32",
		"@types/passport": "^1.0.6",
		"@types/passport-jwt": "^3.0.5",
		"concurrently": "^6.0.0",
		"tslint": "^6.1.3",
		"typescript": "^4.2.3"
	}
}